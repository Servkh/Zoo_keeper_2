package com.zookeeper.second;

public class Bat {
	
	private int energyLevel;

	public Bat() {
		this.energyLevel = 300;
	}
	
	public Bat fly() {
		System.out.println("WEEEEEEEEEEZ,WEEEEZ Bat is taking off");
		this.energyLevel -= 50;
		return this;
	}
	
	public Bat eatHumans() {
		System.out.println("So-well, never mind ...");
		this.energyLevel += 50;
		return this;
	}
	
	public Bat attackTown() {
		System.out.println("Giliiiz Williz, town is on fire");
		this.energyLevel -= 100;
		return this;
	}

}
